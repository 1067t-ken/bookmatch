<h1>全ユーザー一覧</h1>

<%= form_with url: admin_users_path, method: :get do |f| %>
  <%= f.search_field :keyword, value: params[:keyword] %>
  <%= f.submit %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= link_to "詳細", admin_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>