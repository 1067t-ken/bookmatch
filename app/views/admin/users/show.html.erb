<h1>User詳細</h1>

<table class="table">
  <tbody>
    <tr>
      <th>ID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>

<%= link_to "削除する", admin_user_path(@user), method: :delete, data: { confirm: "本当に削除しましますか？" }, class: "btn btn-danger" %>

<%= link_to "一覧に戻る", admin_users_path, class: "btn btn-primary" %>