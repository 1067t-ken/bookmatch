<h1>フォロワー一覧</h1>

<div class="row">
  <div class="col-md-3">
    <%= render 'public/users/info', user: current_user %>
  </div>


  <div class="col-md-9">
    <%= form_with url: users_path, method: :get do |f| %>
      <%= f.search_field :keyword, value: params[:keyword] %>
      <%= f.submit %>
    <% end %>


    <%= render 'public/users/users', users: @users %>
  </div>
</div>