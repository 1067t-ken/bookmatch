<h1>編集</h1>

<%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  
  <div>
    <%= f.label :profile_image %>
    <%= f.file_field :profile_image %>
  </div>

  <div>
    <%= f.submit "更新" %>
  </div>
<% end %>

 <%= link_to '退会する', user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>