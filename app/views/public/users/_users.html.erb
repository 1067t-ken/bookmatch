    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>名前</th>
          <th>フォロー数</th>
          <th>フォロワー数</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>
            <td><%= user.followings.count %></td>
            <td><%= user.followers.count %></td>
            <td><%= render "relationships/btn", user: user %></td>
            <td>
              <%= link_to "Show", user_path(user.id), class: "btn btn-primary my-4" %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
    
    <div class="d-flex justify-content-center my-4">
      <%= paginate users %>
    </div>